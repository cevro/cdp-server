{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "outDir": "dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "dom",
      "es2015.promise",
      "es6"
    ],
    "baseUrl": "./",
    "paths": {
      "@definitions/*": [
        "src/consts/*"
      ],
      "app/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
